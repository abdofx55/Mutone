<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >


    <TextView
        android:id="@+id/list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1."
        android:paddingTop="16dp"/>


    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:paddingRight="36dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/list_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Something In The Air - Bonobo Remix"
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/list_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:paddingRight="72dp"
        android:textColor="#8b8b90"
        app:layout_constraintStart_toStartOf="@+id/list_number"
        app:layout_constraintTop_toBottomOf="@+id/list_name"
        tools:text="Night Vision" />

    <TextView
        android:id="@+id/list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8b8b90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4:35" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_album"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>